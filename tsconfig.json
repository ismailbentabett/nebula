{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests"]
  }  